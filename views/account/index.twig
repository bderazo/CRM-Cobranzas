{% extends layoutApp %}
{% block content %}
	<div class="col-lg-12">
		<div class="ibox">
			<div class="ibox-title">
				<h5>Cuenta de usuario</h5>
			</div>
			<div class="ibox-content">
				<div class="row">
					<div class="col-lg-6">
						<table class="table table-bordered table-condensed table-striped">
							{% for k,v in datos %}
								<tr>
									<th class="col-sm-3">{{ k }}</th>
									<td>{{ v }}</td>
								</tr>
							{% endfor %}
						</table>
					</div>

					<div class="col-lg-6">
						<div class="ibox-content text-center">
							<h1>{{ user.nombres }}&nbsp;{{ user.apellidos }}</h1>
							<div class="m-b-sm">
								<i class="fa fa-user-circle-o fa-5x" aria-hidden="true"></i>
								{# <img alt="image" class="img-circle" src="img/a8.jpg">#}
							</div>
							<p class="font-bold">{{ user.username }}</p>

							<div class="text-center">
								<a href="{{ root }}/account/password" class="btn btn-xs btn-warning"><i class="fa fa-thumbs-up"></i> Cambiar Contrase√±a </a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}