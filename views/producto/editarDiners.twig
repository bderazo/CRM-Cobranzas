                                            <input type="radio" class="custom-control-input" name="example-radios" v-model="seguimiento.telefono_id" :value="t.id">

                                            <template v-if="t.bandera == 1">
                                                <span style="background-color: #CCFFCC;" class="custom-control-label" v-html="t.telefono"></span>
                                            </template>
