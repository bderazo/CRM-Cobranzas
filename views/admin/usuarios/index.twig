{% extends layoutApp %}

{% block content %}
	<div class="col-md-12 col-xl-12">
		<div class="card">
			<div class="card-header">
				<h4 class="card-title">Filtros de Búsqueda</h4>
			</div>
			<div class="card-body">
				<form method="post" id="filtro" class="form-horizontal">
					<div class=" row mb-6">
						<label for="inputName" class="col-sm-2 form-label">Username</label>
						<div class="col-sm-2">
							{{ text_field_tag("username", model.username, {class:'form-control', placeholder:'Username'}) }}
						</div>

						<label for="inputName" class="col-sm-2 form-label">Perfil</label>
						<div class="col-sm-2">
							{{ select_tag('perfil', perfiles, model.perfil, {key:'id',value:'nombre', prompt:'', class:'form-control form-select'} ) }}
						</div>

						<label for="inputName" class="col-sm-2 form-label">Institución</label>
						<div class="col-sm-2">
							{{ select_tag('institucion', instituciones, model.institucion, {key:'id',value:'nombre', prompt:'', class:'form-control form-select'} ) }}
						</div>
					</div>

					<div class=" row mb-6">
						<label for="inputName" class="col-sm-2 form-label">Nombres</label>
						<div class="col-sm-2">
							{{ text_field_tag("nombres", model.nombres, {class:'form-control', placeholder:'Nombres'}) }}
						</div>

						<label for="inputName" class="col-sm-2 form-label">Apellidos</label>
						<div class="col-sm-2">
							{{ text_field_tag("apellidos", model.apellidos, {class:'form-control', placeholder:'Apellidos'}) }}
						</div>

						<label for="inputName" class="col-sm-2 form-label">Activo</label>
						<div class="col-sm-2">
							<select id="activo" name="activo" class="form-control form-select">
								<option value=""></option>
								<option value="si">SI</option>
								<option value="no">NO</option>
							</select>
						</div>
					</div>

					<div class=" row mb-6">
						<label for="inputName" class="col-sm-2 form-label">Canal</label>
						<div class="col-sm-2">
							<select id="canal" name="canal" class="form-control form-select">
								<option value=""></option>
								<option value="CAMPO">CAMPO</option>
								<option value="TELEFONIA">TELEFONIA</option>
								<option value="AUXILIAR TELEFONIA">AUXILIAR TELEFONIA</option>
								<option value="OPERATIVO">OPERATIVO</option>
								<option value="FALLIDAS">FALLIDAS</option>
							</select>
						</div>

						<label for="inputName" class="col-sm-2 form-label">Plaza</label>
						<div class="col-sm-2">
							<select id="plaza" name="plaza" class="form-control form-select">
								<option value=""></option>
								<option value="AMBATO">AMBATO</option>
								<option value="CUENCA">CUENCA</option>
								<option value="GALAPAGOS">GALAPAGOS</option>
								<option value="GUAYAQUIL">GUAYAQUIL</option>
								<option value="MACHALA">MACHALA</option>
								<option value="MANABI">MANABI</option>
								<option value="QUITO">QUITO</option>
							</select>
						</div>

						<label for="inputName" class="col-sm-2 form-label">Campaña</label>
						<div class="col-sm-2">
							<select id="campana" name="campana" class="form-control form-select">
								<option value=""></option>
								<option value="CAMPO">CAMPO</option>
								<option value="REF TLF">REF TLF</option>
								<option value="TELEFONIA">TELEFONIA</option>
							</select>
						</div>
					</div>

					<div class=" row mb-6">
						<label for="inputName" class="col-sm-2 form-label">Identificador</label>
						<div class="col-sm-2">
							<select id="identificador" name="identificador" class="form-control form-select">
								<option value=""></option>
								<option value="DM">DM</option>
								<option value="MN">MN</option>
								<option value="TELF">TELF</option>
							</select>
						</div>

						<label for="inputName" class="col-sm-2 form-label">Equipo</label>
						<div class="col-sm-2">
							<select id="equipo" name="equipo" class="form-control form-select">
								<option value=""></option>
								<option value="PLAZAS">PLAZAS</option>
								<option value="PREJURIDICO">PREJURIDICO</option>
								<option value="ZONA 1 UIO">ZONA 1 UIO</option>
								<option value="ZONA 2 UIO">ZONA 2 UIO</option>
								<option value="ZONA 3 UIO">ZONA 3 UIO</option>
								<option value="ZONA 4 UIO">ZONA 4 UIO</option>
							</select>
						</div>
					</div>

					<div class="mb-0 mt-4 ">
						<div class="col-md-12">
							<button type="submit" class="btn btn-secondary"><i class="glyphicon glyphicon-search"></i> Filtrar</button>
							<button class="btn btn-secondary" onclick="todos()" type="button"><i class="fa fa-eye"></i> Ver todos</button>
							<a href="{{ root }}/admin/usuarios/crear" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Crear usuario</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

	<div class="col-md-12 col-xl-12">
		<div class="card">
			<div class="card-header">
				<h4 class="card-title">Lista de usuarios</h4>
			</div>
			<div class="card-body">
				<div id="lista"></div>
			</div>
		</div>
	</div>

	<script>
		var form = $('#filtro');

		function todos() {
			//resetForm('filtro');
			form[0].reset();
			cargar(1);
		}

		function cargar(page) {
			var data = form.serializeArray();
			$('#lista').load('{{ root }}/admin/usuarios/lista?page=' + page, data);
		}

		form.submit(function () {
			cargar(1);
			return false;
		});

		cargar(1);
	</script>
{% endblock %}