{% extends 'layout.twig' %}
{% block content %}
	{% include "reportes/filtrosBodegaDesperdicio.twig" %}
	<div class="ibox float-e-margins" id="app">
		<div class="ibox-title">
			<h5>
				<strong>Datos</strong>
			</h5>

			<div class="ibox-tools">
{#				<a class="btn btn-xs" id="btnExportar">#}
{#					<i class="far fa-file-excel"></i>Exportar#}
{#				</a>#}
			</div>
		</div>
		<div class="ibox-content no-padding">
			<div class="row">
				<div class="col-lg-12">
					<table class="table table-condensed table-bordered table-stripped">
						<thead>
						<tr>
							<th width="20%" style="text-align: center;"></th>
							<th width="20%" style="text-align: center;">Ingreso Kg</th>
							<th width="20%" style="text-align: center;">Egreso Kg</th>
							<th width="20%" style="text-align: center;">Total Actual Kg Disponible</th>
							<th width="20%" style="text-align: center;">Total Historico Kg</th>
						</tr>
						</thead>
						<tbody>
						<tr v-for="d in datos">
							<td style="font-weight: bold;">
								<div v-if="d.anio > 0">
									<a v-on:click="detalleMovimiento(d.anio,d.mes)" title="Detalle de Movimientos">
										<span v-html="d.fecha"></span>
									</a>
								</div>
								<div v-else>
									<span v-html="d.fecha"></span>
								</div>
							</td>
							<td align="right" v-html="d.ingreso_format"></td>
							<td align="right" v-html="d.egreso_format"></td>
							<td align="right">
								<!--<div v-if="d.anio > 0">
									<a v-on:click="stockDisponible(d.anio,d.mes)" title="Stock Disponible">
										<span v-html="d.disponible_format"></span>
									</a>
								</div>
								<div v-else>
									<span v-html="d.disponible_format"></span>
								</div>-->
								<span v-html="d.disponible_format"></span>
							</td>
							<td align="right" v-html="d.historico_format"></td>
						</tr>
						</tbody>
						<tfoot>
						<tr>
							<td align="right"><strong>TOTAL</strong></td>
							<td align="right" style="font-weight: bold;" v-html="total.total_ingreso"></td>
							<td align="right" style="font-weight: bold;" v-html="total.total_egreso"></td>
							<td align="right" style="font-weight: bold;" v-html="total.total_disponible"></td>
							<td align="right" style="font-weight: bold;" v-html="total.total_historico"></td>
						</tr>
						</tfoot>
					</table>
				</div>
			</div>

		</div>
	</div>

	<form id="exportForm" method="POST" action="{{ root }}/reportes/exportInventarioDesperdicio">
		<input type="hidden" id="json" name="json"/>
	</form>

	<div class="modal inmodal fade" id="modalDetalleMovimiento" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog" style="width:50%">
			<div class="modal-content">
				<div class="modal-header" style="padding:10px">
					<div class="modal-title">Detalle Movimiento</div>
				</div>
				<div class="modal-body">
					<div id="detalleMovimientoContent"></div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
				</div>
			</div>
		</div>
	</div>

	<div class="modal inmodal fade" id="modalStockDisponible" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog" style="width:50%">
			<div class="modal-content">
				<div class="modal-header" style="padding:10px">
					<div class="modal-title">Stock Disponible</div>
				</div>
				<div class="modal-body">
					<div id="stockDisponibleContent"></div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
				</div>
			</div>
		</div>
	</div>

	{#<script src="http://d3js.org/d3.v3.min.js"></script>#}
	{{ bundle('validate') }}
	{{ bundle('boot_select') }}
	{{ script('js/highcharts/highcharts.js') }}
	{{ script('js/highcharts/modules/exporting.js') }}
	{{ script('js/jquery.serialize-object.min.js') }}

	<script type="text/javascript">
		var app = new Vue({
			el: '#app',
			data: {
				datos: [],
				total: [],
			},
			watch: {},
			computed: {},
			methods: {
				consultar: function () {
					var form = $('#filtros');
					var self = this;
					var data = form.serializeArray();
					toggleLoader();
					$.post('{{ root }}/reportes/bodegaDesperdicio', data, function (res) {
						toggleLoader();
						self.datos = res['data'];
						self.total = res['total'];
						console.log(res);
					})
				},

				detalleMovimiento: function (anio,mes) {
					var self = this;
					var data = {
						anio: anio,
						mes: mes,
					};
					$('#detalleMovimientoContent').load('{{ root }}/desperdicio/detalleMovimientos', data, function () {
						$('#modalDetalleMovimiento').modal('show');
					});
				},

                stockDisponible: function (anio,mes) {
                    var self = this;
                    var data = {
                        anio: anio,
                        mes: mes,
                    };
                    $('#stockDisponibleContent').load('{{ root }}/desperdicio/stockDisponible', data, function () {
                        $('#modalStockDisponible').modal('show');
                    });
                },
			},
			mounted: function () {
				var form = $('#filtros');
				var self = this;
				$('#btnExportar').click(function () {
					var data = {
						filtros: form.serializeForm()
					};
					$('#json').val(JSON.stringify(data));
					$('#exportForm').submit();
				});

				$(document).ready(function () {
					$('#btnFiltro').click(function () {self.consultar();});
					$('#btnTodos').click(function () {
						form[0].reset();
						$("#producto_extrusion").val("");
						$("#producto").val("");
						self.consultar();
					});
					self.consultar();
				});
			}
		});
	</script>
{% endblock %}