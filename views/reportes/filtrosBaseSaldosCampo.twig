	<div class="card-footer">
		<button id="btnFiltro" class="btn btn-success"><i class="glyphicon glyphicon-search"></i> Filtrar</button>
		{% include "reportes/loader.twig" %}
		<script>
            var appFiltros = new Vue({
                el: '#filtros',
                data: {
                    canal_usuario: {{ canal_usuario|raw }},
                    plaza_usuario: {{ plaza_usuario|raw }},
                    horas: {{ horas|raw }},
                    minutos: {{ minutos|raw }},
					campana_asignacion: {{ campana_asignacion|raw }},
					campana_ece: {{ campana_ece|raw }},
					campana_usuario: {{ campana_usuario|raw }},
					marca: {{ marca|raw }},
					ciclo_asignacion: {{ ciclo_asignacion|raw }},
					resultado: {{ resultado|raw }},
					accion: {{ accion|raw }},
					descripcion: {{ descripcion|raw }},
					motivo_no_pago: {{ motivo_no_pago|raw }},
					descripcion_no_pago: {{ descripcion_no_pago|raw }},
					gestor: {{ gestor|raw }},
                },
                methods: {},
            });

            $(function () {
				$("#hora_inicio").val('');
				$("#minuto_inicio").val('');
				$("#hora_fin").val('');
				$("#minuto_fin").val('');
                $('.fecha').datepicker({
                    dateFormat: 'yy-mm-dd',
                    showButtonPanel: true
                });
				var d = new Date();
				var month = d.getMonth()+1;
				var day = d.getDate();
				var output = d.getFullYear() + '-' +
						(month<10 ? '0' : '') + month + '-' +
						(day<10 ? '0' : '') + day;
				$("#fecha_inicio").val(output);
				$("#fecha_fin").val(output);
            });
		</script>
