{% extends 'layout.twig' %}
{% block content %}
	{% include "reportes/filtrosAportesExtrusion.twig" %}
	<div class="ibox float-e-margins" id="app">
		<div class="ibox-title">
			<h5>
				<strong>Datos</strong>
			</h5>

			<div class="ibox-tools">
				<a class="btn btn-xs" id="btnExportar">
					<i class="far fa-file-excel"></i>Exportar
				</a>
			</div>
		</div>
		<div class="ibox-content no-padding">
			<div class="row">
				<div class="col-lg-12">
					<table class="table table-condensed table-bordered table-stripped">
						<tr>
							<td width="16%"><strong>Total Rollos</strong></td>
							<td width="16%" v-html="total.total_rollos"></td>
							<td width="16%"><strong>Total Kilos Brutos</strong></td>
							<td width="16%"  v-html="total.total_kilos_desperdicio_bruto_format"></td>
							<td width="16%"><strong>Total Kilos Netos</strong></td>
							<td width="16%" v-html="total.total_kilos_desperdicio_neto_format"></td>
						</tr>
						<tr>
							<td width="16%"><strong>Total Bultos</strong></td>
							<td width="16%" v-html="total.total_bultos"></td>
						</tr>
						<tr>
							<td width="16%"><strong>Total Tortas</strong></td>
							<td width="16%" v-html="total.total_tortas"></td>
						</tr>
					</table>
					<table class="table table-condensed table-bordered table-stripped">
						<thead>
						<tr>
							<th>Tipo Producto</th>
							<th>Producto</th>
							<th>Orden</th>
							<th>Rollos</th>
							<th>Bultos</th>
							<th>Tortas</th>
							<th>Kilos Brutos</th>
							<th>Kilos Netos</th>
						</tr>
						</thead>
						<tbody>
						<tr v-for="d in datos">
							<td v-html="d.tipo_producto"></td>
							<td v-html="d.producto"></td>
							<td>
								<table class="table table-condensed table-bordered table-stripped">
									<thead>
									<tr>
										<th>Orden</th>
										<th>Rollos</th>
										<th>Bultos</th>
										<th>Tortas</th>
										<th>Kilos Brutos</th>
										<th>Kilos Netos</th>
										<th></th>
									</tr>
									</thead>
									<tbody>
									<tr v-for="o in d.ordenes">
										<td>
											<span v-html="o.numero_orden"></span>
										</td>
										<td align="right"><span v-html="o.rollo"></span></td>
										<td align="right"><span v-html="o.bulto"></span></td>
										<td align="right"><span v-html="o.torta"></span></td>
										<td align="right"><span v-html="o.kilos_bruto_format"></span></td>
										<td align="right"><span v-html="o.kilos_neto_format"></span></td>
										<td>
											<a :href="'{{ root }}/produccionExtrusion/editar?id=' + o.id_orden" target="_blank" title="Ir a ProducciÃ³n">
												<i class="fas fa-cogs"></i>
											</a>
											<a v-on:click="verRollos(o.id_orden)" title="Ver Aportes">
												<i class="fas fa-drum-steelpan"></i>
											</a>
										</td>
									</tr>
									</tbody>
								</table>
							</td>
							<td align="right" v-html="d.rollo"></td>
							<td align="right" v-html="d.bulto"></td>
							<td align="right" v-html="d.torta"></td>
							<td align="right" v-html="d.kilos_bruto_format"></td>
							<td align="right" v-html="d.kilos_neto_format"></td>
						</tr>
						</tbody>
						<tfoot>
						<tr>
							<td colspan="3" align="right"><strong>TOTAL</strong></td>
							<td align="right" style="font-weight: bold;" v-html="total.total_rollos"></td>
							<td align="right" style="font-weight: bold;" v-html="total.total_bultos"></td>
							<td align="right" style="font-weight: bold;" v-html="total.total_tortas"></td>
							<td align="right" style="font-weight: bold;" v-html="total.total_kilos_desperdicio_bruto_format"></td>
							<td align="right" style="font-weight: bold;" v-html="total.total_kilos_desperdicio_neto_format"></td>
						</tr>
						</tfoot>
					</table>
				</div>
			</div>

		</div>
	</div>

	<form id="exportForm" method="POST" action="{{ root }}/reportes/exportAportesExtrusion">
		<input type="hidden" id="json" name="json"/>
	</form>

	<div class="modal inmodal fade" id="modalVerRollos" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog" style="width:70%">
			<div class="modal-content">
				<div class="modal-header" style="padding:10px">
					<div class="modal-title">Ver Aportes</div>
				</div>
				<div class="modal-body">
					<div id="verRollosContent"></div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
				</div>
			</div>
		</div>
	</div>

	{{ bundle('validate') }}
	{{ bundle('boot_select') }}
	{{ script('js/highcharts/highcharts.js') }}
	{{ script('js/highcharts/modules/exporting.js') }}
	{{ script('js/jquery.serialize-object.min.js') }}

	<script type="text/javascript">
		var app = new Vue({
			el: '#app',
			data: {
				datos: [],
				total: []
			},
			watch: {},
			computed: {},
			methods: {
				consultar: function () {
					var form = $('#filtros');
					var self = this;
					var data = form.serializeArray();
					toggleLoader();
					$.post('{{ root }}/reportes/aportesExtrusion', data, function (res) {
						toggleLoader();
						self.datos = res['data'];
						self.total = res['total'];
						console.log(res);
					})
				},
                verRollos: function (id_orden) {
                    var self = this;
                    var data = {
                        id_orden: id_orden,
                    };
                    $('#verRollosContent').load('{{ root }}/desperdicio/verAportesExtrusion', data, function () {
                        $('#modalVerRollos').modal('show');
                    });
                },
			},
			mounted: function () {
				var form = $('#filtros');
				var self = this;
				$('#btnExportar').click(function () {
					var data = {
						filtros: form.serializeForm()
					};
					$('#json').val(JSON.stringify(data));
					$('#exportForm').submit();
				});

				$(document).ready(function () {
					$('#btnFiltro').click(function () {self.consultar();});
					$('#btnTodos').click(function () {
						form[0].reset();
						$("#producto_extrusion").val("");
						$("#producto").val("");
						self.consultar();
					});
					self.consultar();
				});
			}
		});
	</script>
{% endblock %}