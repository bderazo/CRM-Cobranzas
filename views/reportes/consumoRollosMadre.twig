{% extends 'layout.twig' %}
{% block content %}
	{% include "reportes/filtrosConsumoRollosMadre.twig" %}
	<div class="ibox float-e-margins" id="app">
		<div class="ibox-title">
			<h5>
				<strong>Datos</strong>
			</h5>

			<div class="ibox-tools">
				<a class="btn btn-xs" id="btnExportar">
					<i class="far fa-file-excel"></i>
					Exportar
				</a>

			</div>
		</div>
		<div class="ibox-content no-padding">
			<div class="row">
				<div class="col-lg-12">
					<table class="table table-condensed table-bordered table-stripped">
						<tr>
							<td width="16%"><strong>Total Peso Bruto</strong></td>
							<td width="16%" v-html="total.total_bruto"></td>
							<td width="16%"><strong>Total Peso Neto</strong></td>
							<td width="16%" v-html="total.total_neto"></td>
						</tr>
					</table>
					<template v-if="tipo_consumo == 'produccion'">
						<table class="table table-condensed table-bordered table-stripped">
							<thead>
							<tr>
								<th>Fecha</th>
								<th>Rollo Madre</th>
								<th>Producto Origen</th>
								<th>Orden Origen</th>
								<th>Producto Destino</th>
								<th>Orden Destino</th>
								<th>Peso Bruto</th>
								<th>Peso Neto</th>
								<th>Operador</th>
							</tr>
							</thead>
							<tbody>
							<tr v-for="d in datos">
								<td v-html="d.fecha_ingreso"></td>
								<td v-html="d.codigo"></td>
								<td v-html="d.producto_origen"></td>
								<td>
									<div v-if="d.tipo_origen == 'extrusion'">
										<a :href="'{{ root }}/produccionExtrusion/editar?id=' + d.id_orden_origen"
										   target="_blank">
											<span v-html="d.numero_orden_origen"></span><br/>
										</a>
									</div>
									<div v-if="d.tipo_origen == 'transformar_rollos'">
										<a :href="'{{ root }}/transformarRollos/editar?id=' + d.id_orden_origen"
										   target="_blank">
											<span v-html="d.numero_orden_origen"></span><br/>
										</a>
									</div>
									<div v-if="d.tipo_origen == 'generar_percha'">
										<a :href="'{{ root }}/generarPercha/editar?id=' + d.id_orden_origen"
										   target="_blank">
											<span v-html="d.numero_orden_origen"></span><br/>
										</a>
									</div>
								</td>
								<td v-html="d.producto_destino"></td>
								<td>
									<div v-if="d.tipo_orden == 'bobinado'">
										<a :href="'{{ root }}/produccionCB/editar?id=' + d.id_orden"
										   target="_blank">
											<span v-html="d.numero_orden"></span><br/>
										</a>
									</div>
									<div v-if="d.tipo_orden == 'corte'">
										<a :href="'{{ root }}/produccionCB/editarCorte?id=' + d.id_orden"
										   target="_blank">
											<span v-html="d.numero_orden"></span><br/>
										</a>
									</div>
								</td>
								<td align="right" v-html="d.peso_bruto_rollo"></td>
								<td align="right" v-html="d.peso_neto_rollo"></td>
								<td>
									<span v-html="d.apellidos"></span> <span v-html="d.nombres"></span>
								</td>
							</tr>
							</tbody>
							<tfoot>
							<tr>
								<td colspan="4" align="right"><strong>TOTAL</strong></td>
								<td align="right" style="font-weight: bold;" v-html="total.total_bruto"></td>
								<td align="right" style="font-weight: bold;" v-html="total.total_neto"></td>
							</tr>
							</tfoot>
						</table>
					</template>

					<template v-if="tipo_consumo == 'venta'">
						<table class="table table-condensed table-bordered table-stripped">
							<thead>
							<tr>
								<th>Fecha</th>
								<th>Rollo Madre</th>
								<th>Orden Origen</th>
								<th>Pedido Despacho</th>
								<th>Cliente</th>
								<th>Peso Bruto</th>
								<th>Peso Neto</th>
								<th>Usuario Despacho</th>
							</tr>
							</thead>
							<tbody>
							<tr v-for="d in datos">
								<td v-html="d.fecha_ingreso"></td>
								<td v-html="d.codigo"></td>
								<td>
									<a :href="'{{ root }}/produccionExtrusion/editar?id=' + d.id_orden"
									   target="_blank">
										<span v-html="d.numero_orden"></span><br/>
									</a>
								</td>
								<td>
									<a :href="'{{ root }}/despachoProductoTerminado/despachar?id_pedido=' + d.id_pedido"
									   target="_blank">
										<span v-html="d.pedido"></span><br/>
									</a>
								</td>
								<td v-html="d.cliente"></td>
								<td align="right" v-html="d.peso_bruto_rollo"></td>
								<td align="right" v-html="d.peso_neto_rollo"></td>
								<td>
									<span v-html="d.apellidos"></span> <span v-html="d.nombres"></span>
								</td>
							</tr>
							</tbody>
						</table>
					</template>
				</div>
			</div>

		</div>
	</div>

	<form id="exportForm" method="POST" action="{{ root }}/reportes/exportConsumoRollosMadre">
		<input type="hidden" id="json" name="json"/>
	</form>

	{# <script src="http://d3js.org/d3.v3.min.js"></script> #}
	{{ bundle('validate') }}
	{{ bundle('boot_select') }}
	{{ script('js/highcharts/highcharts.js') }}
	{{ script('js/highcharts/modules/exporting.js') }}
	{{ script('js/jquery.serialize-object.min.js') }}

	<script type="text/javascript">
        var app = new Vue({
            el: '#app',
            data: {
                datos: [],
                total: []
            },
            watch: {},
            computed: {},
            methods: {
                consultar: function () {
                    var form = $('#filtros');
                    var self = this;
                    var data = form.serializeArray();
                    toggleLoader();
                    $.post('{{ root }}/reportes/consumoRollosMadre', data, function (res) {
                        toggleLoader();
                        self.datos = res['data'];
                        self.total = res['total'];
                        self.tipo_consumo = res['tipo_consumo'];
                    })
                }
            },
            mounted: function () {
                var form = $('#filtros');
                var self = this;
                $('#btnExportar').click(function () {
                    var data = {
                        filtros: form.serializeForm()
                    };
                    $('#json').val(JSON.stringify(data));
                    $('#exportForm').submit();
                });

                $(document).ready(function () {
                    $('#btnFiltro').click(function () {
                        self.consultar();
                    });
                    $('#btnTodos').click(function () {
                        form[0].reset();
                        $("#producto_extrusion").val("");
                        $("#producto").val("");
                        self.consultar();
                    });
                    // self.consultar();
                });
            }
        });


	</script>
{% endblock %}