<div class="card">
	<div class="card-header">
		<h4 class="card-title">Filtros de Búsqueda</h4>
	</div>
	<div class="card-body">
		<form id="filtros">
			<div class="row ">
				<div class="col-sm-3">
					<b>Canal</b> <br>
					<div class="input-group">
						<select class="form-control select2" name="canal_usuario[]" id="canal_usuario" multiple>
							<option value=""></option>
							<option v-for="(v,k) in canal_usuario" v-html="v" :value="k"></option>
						</select>
					</div>
				</div>

				<div class="col-sm-3">
					<b>Campaña con ECE</b> <br>
					<div class="input-group">
						<select class="form-control select2" name="campana_ece[]" id="campana_ece" multiple>
							<option value=""></option>
							<option v-for="(v,k) in campana_ece" v-html="v" :value="k"></option>
						</select>
					</div>
				</div>

				<div class="col-sm-3">
					<b>Campaña usuario</b> <br>
					<div class="input-group">
						<select class="form-control select2" name="campana_usuario[]" id="campana_usuario" multiple>
							<option value=""></option>
							<option v-for="(v,k) in campana_usuario" v-html="v" :value="k"></option>
						</select>
					</div>
				</div>

				<div class="col-sm-3">
					<b>Zona</b> <br>
					<div class="input-group">
						<select class="form-control select2" name="plaza_usuario[]" id="plaza_usuario" multiple>
							<option value=""></option>
							<option v-for="(v,k) in plaza_usuario" v-html="v" :value="k"></option>
						</select>
					</div>
				</div>

				<div class="col-sm-3">
					<b>Ciclo</b> <br>
					<div class="input-group">
						<select class="form-control select2" name="ciclo[]" id="ciclo" multiple>
							<option value=""></option>
							<option v-for="(v,k) in ciclo_asignacion" v-html="v" :value="k"></option>
						</select>
					</div>
				</div>

		
				
			</div>
		</form>
	</div>
	<div class="card-footer">
		<button id="btnFiltro" class="btn btn-success"><i class=""></i> Filtrar</button>
		<button id="btnTodos" class="btn btn-success"><i class=""></i> Limpiar filtros</button>
		{% include "reportes/loader.twig" %}
		<script>
            var appFiltros = new Vue({
                el: '#filtros',
                data: {
                    canal_usuario: {{ canal_usuario|raw }},
                    plaza_usuario: {{ plaza_usuario|raw }},
                    horas: {{ horas|raw }},
                    minutos: {{ minutos|raw }},
					campana_asignacion: {{ campana_asignacion|raw }},
					campana_ece: {{ campana_ece|raw }},
					campana_usuario: {{ campana_usuario|raw }},
					marca: {{ marca|raw }},
					ciclo_asignacion: {{ ciclo_asignacion|raw }},
                },
                methods: {},
            });

            $(function () {
				$("#hora_inicio").val('');
				$("#minuto_inicio").val('');
				$("#hora_fin").val('');
				$("#minuto_fin").val('');
                $('.fecha').datepicker({
                    dateFormat: 'yy-mm-dd',
                    showButtonPanel: true
                });

            });
		</script>
	</div>
</div>