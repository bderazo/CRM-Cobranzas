                            <td style="text-align: center;" v-html="d.hora_13"></td>
                            <td style="text-align: center;" v-html="d.hora_14"></td>
                            <td style="text-align: center;" v-html="d.hora_15"></td>
                            <td style="text-align: center;" v-html="d.hora_16"></td>
