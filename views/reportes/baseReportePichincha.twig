{% extends 'layout.twig' %}

{% block content %}
    {{ bundle('validate') }}
    {{ bundle('boot_select') }}
    {{ script('js/jquery.serialize-object.min.js') }}
    {{ bundle('select2') }}

    <form id="fechaForm" method="post">
        <label for="fecha_inicio">Fecha de Inicio:</label>
        <input type="date" id="fecha_inicio" name="fecha_inicio" required>

        <label for="fecha_fin">Fecha de Fin:</label>
        <input type="date" id="fecha_fin" name="fecha_fin" required>

        <button type="submit">Generar Reporte</button>
    </form>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#fechaForm').on('submit', function(e) {
                e.preventDefault(); // Evita que el formulario se env√≠e de manera tradicional

                // Serializar los datos del formulario
                var formData = $(this).serialize();

                // Enviar datos al controlador usando AJAX
                $.post('{{ root }}/reportes/reportesGeneral', formData, function(res) {
                    // Manejar la respuesta del servidor
                    console.log(res);
                }).fail(function(xhr, status, error) {
                    // Manejar errores
                    console.error(error);
                });
            });
        });
    </script>
{% endblock %}
